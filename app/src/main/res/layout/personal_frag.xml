<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F2F2"
    tools:context=".Personal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F5F2F2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F2F2">
            <androidx.cardview.widget.CardView
                android:id="@+id/HeaderCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:padding="8dp"
                    android:background="@drawable/gradient_back">
                    <TextView
                        android:id="@+id/account_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"
                        android:textColor="#FFF"
                        android:textSize="16sp"
                        android:text="Account "
                        android:fontFamily="@font/allerta_stencil"
                        />
                    <TextView
                        android:id="@+id/welcome_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/email_txt"
                        android:layout_marginStart="16dp"
                        android:textStyle="bold"
                        android:textColor="#FFF"
                        android:textSize="14sp"
                        android:text="Welcome "
                        android:fontFamily="@font/allerta_stencil"
                        />
                    <TextView
                        android:id="@+id/welcome_name_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/welcome_txt"
                        app:layout_constraintBottom_toTopOf="@id/email_txt"
                        android:textStyle="bold"
                        android:textColor="#FFF"
                        android:textSize="14sp"
                        android:fontFamily="@font/allerta_stencil"
                        />
                    <TextView
                        android:id="@+id/email_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="16dp"
                        android:textSize="12sp"
                        android:textColor="#FFF"
                        android:fontFamily="@font/allerta_stencil"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/BalanceCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/HeaderCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:background="#FFF">
                    <ImageView
                        android:id="@+id/balance_card_img"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_balance"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:id="@+id/balance_card_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/allerta_stencil"
                        android:text="Your balance : "
                        android:textStyle="bold"
                        android:textColor="#020F86"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@id/balance_card_img"
                        app:layout_constraintTop_toTopOf="@id/balance_card_img"
                        app:layout_constraintBottom_toBottomOf="@id/balance_card_img"
                        android:layout_marginStart="12dp"
                        />
                    <TextView
                        android:id="@+id/balance_card_text_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="#020F86"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@id/balance_card_text"
                        app:layout_constraintTop_toTopOf="@id/balance_card_img"
                        app:layout_constraintBottom_toBottomOf="@id/balance_card_img"
                        />
                    <TextView
                        android:id="@+id/balance_card_text_egb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="EGP"
                        android:layout_marginStart="2dp"
                        android:textStyle="bold"
                        android:textColor="#020F86"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@id/balance_card_text_value"
                        app:layout_constraintTop_toTopOf="@id/balance_card_img"
                        app:layout_constraintBottom_toBottomOf="@id/balance_card_img"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/account_data_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/UpdateDataCard"
                app:layout_constraintTop_toBottomOf="@id/BalanceCard"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                android:textAllCaps="true"
                android:text="zar3ty account"
                android:fontFamily="@font/allerta_stencil"
                android:textSize="12sp"
                android:textStyle="bold"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/UpdateDataCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/category_card_back"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/account_data_txt"
                android:layout_marginTop="8dp"
                android:foreground="?android:attr/selectableItemBackground"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">
                    <ImageView
                        android:id="@+id/update_card_img"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_update"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/update_card_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/allerta_stencil"
                        android:text="Update Your Data"
                        android:textStyle="normal"
                        android:textColor="#000"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@id/update_card_img"
                        app:layout_constraintTop_toTopOf="@id/update_card_img"
                        app:layout_constraintBottom_toBottomOf="@id/update_card_img"
                        android:layout_marginStart="12dp"
                        />
                    <ImageView
                        android:id="@+id/update_card_arrow_img"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_arrow"
                        android:scaleType="fitXY"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/other_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/MyOrdersCard"
                app:layout_constraintTop_toBottomOf="@id/MyRatesCard"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                android:textAllCaps="true"
                android:text="other"
                android:fontFamily="@font/allerta_stencil"
                android:textSize="12sp"
                android:textStyle="bold"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/MyOrdersCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/category_card_back"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/other_txt"
                android:layout_marginTop="8dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                tools:ignore="KeyboardInaccessibleWidget">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">
                    <ImageView
                        android:id="@+id/orders_card_img"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_box"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/orders_card_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/allerta_stencil"
                        android:text="Orders"
                        android:textStyle="normal"
                        android:textColor="#000"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@id/orders_card_img"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="12dp"
                        />
                    <ImageView
                        android:id="@+id/orders_card_arrow_img"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_arrow"
                        android:scaleType="fitXY"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/MyItemsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/category_card_back"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/MyOrdersCard"
                android:foreground="?android:attr/selectableItemBackground"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">
                    <ImageView
                        android:id="@+id/items_card_img"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/items_card_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/allerta_stencil"
                        android:text="My Items"
                        android:textStyle="normal"
                        android:textColor="#000"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@id/items_card_img"
                        app:layout_constraintTop_toTopOf="@id/items_card_img"
                        app:layout_constraintBottom_toBottomOf="@id/items_card_img"
                        android:layout_marginStart="12dp"
                        />
                    <ImageView
                        android:id="@+id/items_card_arrow_img"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_arrow"
                        android:scaleType="fitXY"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/MyChatsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/category_card_back"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/MyItemsCard"
                android:padding="8dp"
                android:foreground="?android:attr/selectableItemBackground"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">
                    <ImageView
                        android:id="@+id/chats_card_img"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_chat"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/chats_card_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/allerta_stencil"
                        android:text="My Chats"
                        android:textStyle="normal"
                        android:textColor="#000"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@id/chats_card_img"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="12dp"
                        />
                    <ImageView
                        android:id="@+id/chats_card_arrow_img"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_arrow"
                        android:scaleType="fitXY"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/MyRatesCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/category_card_back"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/UpdateDataCard"
                android:padding="8dp"
                android:foreground="?android:attr/selectableItemBackground"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">
                    <ImageView
                        android:id="@+id/rates_card_img"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_rate"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/rates_card_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/allerta_stencil"
                        android:text="Ratings &amp; \Reviews "
                        android:textStyle="normal"
                        android:textColor="#000"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@id/rates_card_img"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="12dp"
                        />
                    <ImageView
                        android:id="@+id/rates_card_arrow_img"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_arrow"
                        android:scaleType="fitXY"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/sign_out_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/allerta_stencil"
                android:text="Sign Out"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="#020F86"
                android:textSize="18sp"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="36dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/MyChatsCard"
                app:layout_constraintBottom_toBottomOf="parent"
                />
           <!-- <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ads:layout_constraintStart_toStartOf="parent"
                ads:layout_constraintEnd_toEndOf="parent"
                ads:layout_constraintTop_toTopOf="parent"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
            </com.google.android.gms.ads.AdView>-->


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>