<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:behavior_peekHeight="300dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    >
    <CheckBox
        android:id="@+id/discount_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:text="Add Discount"
        android:fontFamily="@font/allerta_stencil"
        android:textStyle="bold"
        android:textColor="#000"
        app:buttonTint="#000"/>
    <androidx.appcompat.widget.AppCompatEditText
        app:backgroundTint="#000"
        android:id="@+id/discount_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/discount_check_box"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:hint="Enter Discount Value"
        android:inputType="numberDecimal"
        android:fontFamily="@font/allerta_stencil"
        />
    <TextView
        android:id="@+id/new_price_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/discount_edit_text"
        app:layout_constraintStart_toStartOf="@id/discount_edit_text"
        android:layout_marginTop="12dp"
        android:text="New Price : "
        android:textSize="18sp"
        android:textColor="#000"
        android:fontFamily="@font/allerta_stencil"
        />
    <TextView
        android:id="@+id/new_price_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/discount_edit_text"
        app:layout_constraintStart_toEndOf="@id/new_price_tag"
        android:layout_marginTop="12dp"
        android:text="0"
        android:textSize="18sp"
        android:textColor="#000"
        android:fontFamily="@font/allerta_stencil"
        />
    <Button
        android:id="@+id/skip_discount_btn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/new_price_tag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_border_black"
        android:text="Skip"
        android:textColor="#000"
        android:fontFamily="@font/allerta_stencil"
        />
    <Button
        android:id="@+id/done_discount_btn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/new_price_tag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_back_black"
        android:text="Done"
        android:textColor="#FFF"
        android:fontFamily="@font/allerta_stencil"
        />
</androidx.constraintlayout.widget.ConstraintLayout>