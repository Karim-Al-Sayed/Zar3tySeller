<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/view_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">
    <ImageView
        android:id="@+id/delete_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/view_background"
        app:layout_constraintBottom_toBottomOf="@id/view_background"
        app:layout_constraintEnd_toEndOf="@id/view_background"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_delete_sweep_black_24dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/delete_icon"
        app:layout_constraintTop_toTopOf="@id/delete_icon"
        app:layout_constraintBottom_toBottomOf="@id/delete_icon"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:text="DELETE"
        android:layout_marginEnd="12dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF">
    <androidx.cardview.widget.CardView
        android:id="@+id/chat_card"
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="@id/view_foreground"
        app:layout_constraintBottom_toBottomOf="@id/view_foreground"
        app:layout_constraintStart_toStartOf="@id/view_foreground"
        app:layout_constraintEnd_toEndOf="@id/view_foreground"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/user_profile_img_row"
                android:src="@drawable/ic_user_vector"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="16dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:id="@+id/user_username_row"
                android:layout_toEndOf="@id/user_profile_img_row"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:textSize="18sp"
                android:textColor="#000"
                app:layout_constraintTop_toTopOf="@id/user_profile_img_row"
                app:layout_constraintStart_toEndOf="@id/user_profile_img_row"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Message"
                android:id="@+id/user_last_msg_row"
                android:layout_toEndOf="@id/user_profile_img_row"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:textSize="16sp"
                android:textColor="#000"
                android:maxLines="1"
                app:layout_constraintTop_toBottomOf="@id/user_username_row"
                app:layout_constraintBottom_toBottomOf="@id/user_profile_img_row"
                app:layout_constraintStart_toEndOf="@id/user_profile_img_row"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>