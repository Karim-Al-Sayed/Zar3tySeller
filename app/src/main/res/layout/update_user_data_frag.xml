<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateUserData">
    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".SellerProfileUpdate">
            <ImageView
                android:id="@+id/seller_update_profile_img"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_upload_cloud"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.appcompat.widget.AppCompatEditText
                app:backgroundTint="#000"
                android:id="@+id/seller_update_user_name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@id/seller_update_profile_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textAlignment="textStart"
                android:padding="8dp"
                android:fontFamily="monospace"
                android:textColor="#000"
                android:textSize="18sp"
                android:inputType="text"
                android:maxLines="1"
                android:hint="@string/seller_update_user_name_hint"
                android:textColorHint="#000"/>
            <androidx.appcompat.widget.AppCompatEditText
                app:backgroundTint="#000"
                android:id="@+id/seller_update_user_phone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@id/seller_update_user_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textAlignment="textStart"
                android:padding="8dp"
                android:fontFamily="monospace"
                android:textColor="#000"
                android:textSize="18sp"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:hint="@string/seller_update_user_phone_hint"
                android:textColorHint="#000"/>
            <androidx.appcompat.widget.AppCompatEditText
                app:backgroundTint="#000"
                android:id="@+id/seller_update_user_country"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@id/seller_update_user_phone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textAlignment="textStart"
                android:padding="8dp"
                android:fontFamily="monospace"
                android:textColor="#000"
                android:textSize="18sp"
                android:inputType="text"
                android:maxLines="1"
                android:hint="@string/seller_update_user_country_hint"
                android:textColorHint="#000"/>
            <Button
                android:id="@+id/seller_update_user_data_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/signup_sign_btn_back"
                android:fontFamily="monospace"
                android:text="@string/seller_update_user_data_btn"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/seller_update_user_country" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>